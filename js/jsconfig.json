{
    "include": ["src/**/*.{js,vue}"],
    "compilerOptions": {
        "strict": true,
        "module": "esnext",
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@app": ["./src/app"],
            "@pages": ["./src/pages"],
            "@widgets": ["./src/widgets"],
            "@features": ["./src/features"],
            "@entities": ["./src/entities"],
            "@shared/*": ["./src/shared/*"]
        },
        "allowJs": true,
        "checkJs": true
    }
}

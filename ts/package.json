{
    "name": "vue-configs-ts",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "prepare": "husky",
        "dev": "vite",
        "build": "vue-tsc && vite build",
        "preview": "vite preview",
        "lint:prettier": "npx prettier --write **/*.{vue,js,ts,css,json,md,html}",
        "lint:stylelint": "npx stylelint --fix **/*.{vue,css}",
        "lint:eslint": "npx eslint --fix **/*.{vue,js,ts}",
        "lint:all": "npm run lint:prettier && npm run lint:stylelint && npm run lint:eslint"
    }
}
